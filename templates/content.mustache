{{!
    @template block_my_day_buttons/content

    My Day (Buttons) block content template.
}}

<div class="my-day-buttons {{^fromws}}isloading{{/fromws}}" 
    data-region="block_my_day_buttons-instance-{{instanceid}}" 
    data-num-periods="{{numperiods}}" 
    data-num-courses="{{numcourses}}" 
    data-timetableday="{{day}}" 
    data-timetabledate="{{date}}" 
    data-timetableuser="{{username}}">
    <div class="timetable-controls">
        <h5 class="aday">{{day}}</h5>
        <div class ="nav">
            <a href="#" class="timetable-prev" title="Previous Day"><i class="icon fa fa-chevron-left icon-large" aria-hidden="true" aria-label="Prev"></i></a>
            <a href="#" class="timetable-next" title="Next Day"><i class="icon fa fa-chevron-right icon-large" aria-hidden="true" aria-label="Next"></i></a>
           <span class="spinner"><span class="circle spin"></span></span>
        </div>
    </div>
    {{#courses}}
        {{>block_my_day_buttons/coursecard}}
    {{/courses}}
    <div class="periods">
        {{#noperiods}}<h5 class="activitytitle">{{noactivitytitle}}</h5>{{/noperiods}}
        {{^noperiods}}<h4>{{periodstitle}} </h4>{{/noperiods}}
        {{#periods}}
            {{>block_my_day_buttons/period}}
        {{/periods}}
    </div>
</div>